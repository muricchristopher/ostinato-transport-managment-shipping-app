<div class="navigation-area d-flex justify-content-between align-items-center">

<div class="d-flex justify-content-center align-items-center gap-2 ">
<h2 class="mb-3"><%= @transport_company.company_name %></h2>
  <% if @transport_company.active? %>
    <p class="alert alert-success">ATIVO</p>
  <% else %>
      <p class="alert alert-danger">INATIVO</p>
  <% end %>
</div>


<div class="navigation d-flex gap-2">
    <%= button_to "Ver tabelas de preÃ§o", new_transport_company_path, {method: :get, class: "btn btn-outline-warning"} %>

    <% if @transport_company.active? %>
      <%= button_to "Desativar", toggle_status_transport_company_path, {method: :patch, class: "btn btn-outline-danger"} %>
    <% else %>
      <%= button_to "Ativar", toggle_status_transport_company_path, {method: :patch, class: "btn btn-outline-success"} %>
    <% end %>
     <%= button_to "Voltar para a lista", transport_companies_path, {method: :get, class: "btn btn-outline-danger"} %>
  </div>
</div>
<hr>


<div class="row scroll">
<% @transport_company.form_attributes.each do |attr_name, attr_value| %>
<div class="col-lg-3">

<div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header"><%= TransportCompany.human_attribute_name(attr_name) %></div>
  <div div class="card-body">
    <h5 class="card-title"><%= attr_value %></h5>
  </div>
</div>
</div>
<% end %>
<div class="col-lg-3">
<div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">Registrado em</div>
  <div div class="card-body">
    <h5 class="card-title"><%= I18n.localize(Date.parse(@transport_company.created_at.strftime('%d/%m/%Y')))%></h5>
  </div>
</div>



