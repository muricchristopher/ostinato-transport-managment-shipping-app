<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Metros cúbicos</th>
      <th scope="col">Peso</th>
      <th scope="col">Valor / KM</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
<% @prices.each do |price| %>
<tr>
      <th scope="row"><%= price.cubic_meters_min %>m³ á <%= price.cubic_meters_max%>m³</th>
      <td><%= price.weight_min %>kg á <%= price.weight_max%>kg</td>
      <td>R$<%= price.value_per_km %></td>
      <td class="d-flex gap-2"><%= button_to "Editar", root_path, {method: :get, class: "btn btn-warning"} %> <%= button_to "Deletar", root_path, {method: :delete, class: "btn btn-danger"} %></td>
</tr>

<% end %>
  </tbody>
</table >
